<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://caption"
        xmlns:ddcme="http://schemas.diedavids.de/metadataextensions/0.1/ui-component.xsd"
        messagesPack="de.diedavids.cuba.metadataextensions.web.screens.example">
    <actions>
        <action id="openCreateUser"/>
        <action id="openCreateUserProgrammatically"/>
    </actions>
    <facets>

        <ddcme:entityDialog
                id="createUser"
                caption="msg://createUser"
                onAction="openCreateUser"
                entityClass="com.haulmont.cuba.security.entity.User">
            <ddcme:parameters>
                <ddcme:entityAttributeParameter
                        id="visibleParameter"
                        autoBinding="true"
                        caption="msg://customLoginCaption"
                        defaultValue="Bro"
                        property="login" />
            </ddcme:parameters>
        </ddcme:entityDialog>

    </facets>
    <layout>

        <button caption="Create User"
                action="openCreateUser" />

        <button caption="Create User (programmatically"
                action="openCreateUserProgrammatically" />
    </layout>
</window>