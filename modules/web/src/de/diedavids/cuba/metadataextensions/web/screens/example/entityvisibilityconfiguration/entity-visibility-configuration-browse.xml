<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="entityVisibilityConfigurationsTable"
        messagesPack="de.diedavids.cuba.metadataextensions.web.screens.example.entityvisibilityconfiguration">
    <data readOnly="true">
        <collection id="entityVisibilityConfigurationsDc"
                    class="de.diedavids.cuba.metadataextensions.example.entity.EntityVisibilityConfiguration"
                    view="_local">
            <loader id="entityVisibilityConfigurationsDl">
                <query>
                    <![CDATA[select e from ddcme_EntityVisibilityConfiguration e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="entityVisibilityConfigurationsTable"
            spacing="true">
        <filter id="filter"
                applyTo="entityVisibilityConfigurationsTable"
                dataLoader="entityVisibilityConfigurationsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="entityVisibilityConfigurationsTable"
                    width="100%"
                    dataContainer="entityVisibilityConfigurationsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="entity"/>
                <column id="entityAttribute"/>
                <column id="visible"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="entityVisibilityConfigurationsTable.create"/>
                <button id="editBtn" action="entityVisibilityConfigurationsTable.edit"/>
                <button id="removeBtn" action="entityVisibilityConfigurationsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
