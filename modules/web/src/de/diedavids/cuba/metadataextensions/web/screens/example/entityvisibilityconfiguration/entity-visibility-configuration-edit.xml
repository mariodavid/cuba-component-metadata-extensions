<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="de.diedavids.cuba.metadataextensions.web.screens.example.entityvisibilityconfiguration">
    <data>
        <instance id="entityVisibilityConfigurationDc"
                  class="de.diedavids.cuba.metadataextensions.example.entity.EntityVisibilityConfiguration"
                  view="_local">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="entityVisibilityConfigurationDc">
            <column width="250px">
                <lookupField id="entityField" property="entity"/>
                <lookupField id="entityAttributeField" property="entityAttribute"/>
                <checkBox id="visibleField" property="visible"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
